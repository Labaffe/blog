{% extends 'base.html.twig' %}

{% block title %}Hello BlogController!{% endblock %}

{% block body %}


<div>
	<table class="table">
		<thead class="thead-dark">
			<tr>
			  <th class = "text-center"><h1>Articles</h1></th>
			</tr>
		</thead>
		<tbody>
			{% for article in articles %}
			<tr>
				<td>
				{% set art = {titre : article.titre|capitalize, description:article.description|capitalize, date_publication:article.getDatePublication()|date('d/m/Y')}%}
			 {% include 'article.html.twig' with art %}
				</td>
			</tr>
			{% endfor %}
			{# display navigation #} 
		</tbody>
	</table>	
	<div class="pagination""> 
		{{ knp_pagination_render(articles) }} 
	</div> 
</div>
{% endblock %}
